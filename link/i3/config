set $displayMode "Set display mode [w]ork [l]aptop [h]ome"
bindsym $mod+z mode $displayMode
mode $displayMode {
    bindsym w exec "\
            feh --bg-fill ~/.dotfiles/wallpaper/wallpaper.png && \
                 ~/.screenlayout/work.sh && \
                 ~/.config/polybar/launch.sh"; \
                mode "default"
    bindsym h exec "\
            feh -z --bg-fill ~/.dotfiles/wallpaper/wallpaper.png && \
                 ~/.screenlayout/home.sh && \
                 ~/.config/polybar/launch.sh"; \
                mode "default"
    bindsym l exec "\
                 ~/.screenlayout/laptop.sh && \
                 ~/.config/polybar/launch.sh"; \
                mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
